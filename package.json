{
  "name": "hapi-vue-ssr-template",
  "version": "1.0.0",
  "description": "hapi vue ssr template",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon start",
    "start": "NODE_ENV=production node start",
    "build": "rimraf static/public && npm run build:client && npm run build:server",
    "build:client": "NODE_ENV=production webpack --config src/modules/web/config/webpack.client.config.js --progress --hide-modules",
